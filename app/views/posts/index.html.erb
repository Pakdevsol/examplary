<%= link_to "Add post", new_post_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.author %></td>
      <td><%= post.description %></td>
      <td><%= post.user.full_name %></td>
      <td>
        <%= link_to "Edit", edit_post_path(post.id) %>
        <%= link_to "Destroy", post_path(post.id), method: :delete %>
      </td>
    <% end %>
  </tbody>
</table>
